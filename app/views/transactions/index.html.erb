<h1>Historiques de vos transactions</h1>
  <table class="table table-striped">
    <caption>Envoyées</caption>
  <thead>
    <tr> 
      <th>ID</th>
      <th>Destinataire</th>
      <th>Date</th>
    </tr>
  </thead>

  <tbody>
    <% @src_transactions.each do |t| %>
      
      <tr>
        <td><%= t.id %></td>
        <td><%= t.dst_account.email %></td>
        <td><%= t.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

  <table class="table table-striped">
    <caption>Reçues</caption>
  <thead>
    <tr> 
      <th>ID</th>
      <th>Destinataire</th>
      <th>Date</th>
    </tr>
  </thead>

  <tbody>
    <% @dst_transactions.each do |t| %>
      
      <tr>
        <td><%= t.id %></td>
        <td><%= t.src_account.email %></td>
        <td><%= t.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
